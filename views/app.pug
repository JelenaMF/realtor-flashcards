extends layout.pug

block main
    section.namecard
        .namecard-hello
            if name
                p.namecard-greeting Welcome, #{name}! 
                // creates a goodbye button on the home page 
                form.namecard-exit(action='/goodbye' method='post')
                    button(type='submit') 
                        img(src='/static/img/close.svg')
            else 
                p.namecard-greeting Hello, student!
        block intro
    block card